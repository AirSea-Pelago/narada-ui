{
  "name": "airsea_drone_narada",
  "version": "2.0.0",
  "description": "Secure Video Streaming Platform with License Protection",
  "main": "main.js",
  "scripts":  {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "setup-python": "powershell -ExecutionPolicy Bypass -File scripts/setup-python. ps1"
  },
  "build": {
    "appId": "com.airsea.narada",
    "productName": "AirSea Drone Narada",
    "directories": {
      "output":  "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "! node_modules",
      "! dist",
      "!build",
      "!src",
      "!.gitignore",
      "!*.md",
      "!python/**",
      "!crowd_counter/**",
      "! scripts/**"
    ],
    "extraResources": [
      {
        "from": "mediamtx/",
        "to": "mediamtx/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "python/",
        "to": "python/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "crowd_counter/",
        "to":  "crowd_counter/",
        "filter": [
          "**/*",
          "!venv/**",
          "!__pycache__/**",
          "!*. pyc",
          "!*. pyo",
          "!. git/**"
        ]
      },
      "license-checker.py",
      "generate-license.py"
    ],
    "asarUnpack": [
      "python/**/*",
      "crowd_counter/**/*",
      "mediamtx/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName":  "${productName}-${version}-${arch}.${ext}",
      "publisherName": "Your Company"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut":  true,
      "shortcutName": "AirSea Drone Narada",
      "uninstallDisplayName": "${productName}",
      "license":  "license.txt"
    },
    "publish": null
  },
  "keywords": [
    "video",
    "streaming",
    "security",
    "rtsp",
    "rtmp",
    "mediamtx",
    "license",
    "crowd-counting",
    "ai"
  ],
  "author":  "am",
  "license":  "ISC",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "hls. js": "^1.6.15",
    "video.js": "^8.23.4",
    "videojs-contrib-hls": "^5.15.0"
  }
}